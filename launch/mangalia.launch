<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="gui" default="true"/>
    <arg name="paused" default="false"/>
    <arg name="onshore" default="false"/>
    <arg name="model_path" default=""/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="worlds/mangalia.world"/>
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
        <arg name="verbose" value="true" />
    </include>

    <group if="$(arg onshore)">
        <arg name="uav_name" default="hector" />
        <arg name="irr_name" default="corin" />
        <arg name="sdf_uav_file" default="$(arg model_path)/MIMRee/mimree_simulator/models/mimree_uav/model.sdf" />

        <param name="$(arg uav_name)_description" textfile="$(find mimree_description)/urdf/$(arg uav_name).urdf" />

        <node name="$(arg uav_name)_spawn" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-file $(arg sdf_uav_file) -sdf -x -0.0 -y -0.0 -z 7.12 -R 0. -P 0. -Y 0. -model $(arg uav_name)"/>
        <node name="$(arg uav_name)_altLidar_tf_broadcaster" pkg="mimree_description" type="mimree_tf_broadcaster" args="$(arg uav_name) mimree_uav altLidar" />
        <node name="$(arg uav_name)_scanningLidar_tf_broadcaster" pkg="mimree_description" type="mimree_tf_broadcaster" args="$(arg uav_name) mimree_uav scanningLidar" respawn="true" />
        <node name="$(arg uav_name)_altLidar_to_cloud" pkg="mimree_description" type="laser_to_pc" args="$(arg uav_name) altLidar" />
        <node name="$(arg uav_name)_scanningLidar_to_cloud" pkg="mimree_description" type="laser_to_pc" args="$(arg uav_name) scanningLidar" />
        <node name="$(arg uav_name)_scanningLidar_wt_detector" pkg="mimree_description" type="edge_wt_detector" args="$(arg uav_name) scanningLidar" respawn="true" />

        <!-- robot description -->
        <node name="spawn_bladebug" pkg="gazebo_ros" type="spawn_model"
        args="-file $(find bladebug_description)/urdf/bladebug_rotated.urdf -urdf -x 0.14 -y 0.0 -z 7.00 -model $(arg irr_name)"/>
        <!-- <node name="spawn_bladebug" pkg="gazebo_ros" type="spawn_model"
        args="-file $(find bladebug_description)/urdf/bladebug_rotated.urdf -urdf -x 5.14 -y 0.0 -z 7.00 -Y 1.5707 -model $(arg irr_name)"/> -->

        <!-- robot description -->
        <param name="robot_description" 
               textfile="$(find bladebug_description)/urdf/bladebug_rotated.urdf"/>

        <!-- Robot controllers -->
        <include file="$(find bladebug_gazebo)/launch/bladebug_control.launch"/>
        
        <!-- bringup controls -->
        <arg name="config" default="bladebug"/>
        <arg name="joy_mapping" default="xbox"/>
        <param name="use_gui" value="$(arg gui)"/>
        <rosparam command="load" file="$(find bladebug_description)/params/$(arg config).yaml" />
        <rosparam command="load" file="$(find bladebug_description)/params/dynamixel.yaml" />
        <rosparam command="load" file="$(find bladebug_description)/params/$(arg joy_mapping).yaml" />

        <include file="$(find bladebug_bringup)/launch/components/joy_teleop.launch" />

        <node name="Bladebug_Controller" pkg="bladebug_controller" type="bladebug_controller" output="screen" respawn="true" />
    </group>

    <group unless="$(arg onshore)">
        <arg name="uav_name" default="hector" />
        <arg name="asv_name" default="halcyon" />
        <arg name="irr_name" default="corin" />
        <arg name="sdf_uav_file" default="$(arg model_path)/MIMRee/mimree_simulator/models/mimree_uav/model.sdf" />
        <arg name="sdf_asv_file" default="$(arg model_path)/MIMRee/mimree_simulator/models/mimree_asv/model.sdf" />

        <param name="$(arg uav_name)_description" textfile="$(find mimree_description)/urdf/$(arg uav_name).urdf" />
        <param name="$(arg asv_name)_description" textfile="$(find mimree_description)/urdf/$(arg asv_name).urdf" />

        <node name="$(arg uav_name)_spawn" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-file $(arg sdf_uav_file) -sdf -x -14.0 -y -19.65 -z 2.32 -R 0. -P 0. -Y 0. -model $(arg uav_name)"/>
        <node name="$(arg uav_name)_altLidar_tf_broadcaster" pkg="mimree_description" type="mimree_tf_broadcaster" args="$(arg uav_name) mimree_uav altLidar" />
        <node name="$(arg uav_name)_scanningLidar_tf_broadcaster" pkg="mimree_description" type="mimree_tf_broadcaster" args="$(arg uav_name) mimree_uav scanningLidar" respawn="true" />
        <node name="$(arg uav_name)_altLidar_to_cloud" pkg="mimree_description" type="laser_to_pc" args="$(arg uav_name) altLidar" />
        <node name="$(arg uav_name)_scanningLidar_to_cloud" pkg="mimree_description" type="laser_to_pc" args="$(arg uav_name) scanningLidar" />
        <node name="$(arg uav_name)_scanningLidar_wt_detector" pkg="mimree_description" type="edge_wt_detector" args="$(arg uav_name) scanningLidar" respawn="true" />

        <node name="$(arg asv_name)_spawn" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-file $(arg sdf_asv_file) -sdf -x -10.0 -y -20.0 -z 0.0 -R 0. -P 0. -Y 0. -model $(arg asv_name)"/>
        <node name="$(arg asv_name)_altLidar_tf_broadcaster" pkg="mimree_description" type="mimree_tf_broadcaster" args="$(arg asv_name) mimree_asv altLidar" />
        <node name="$(arg asv_name)_altLidar_to_cloud" pkg="mimree_description" type="laser_to_pc" args="$(arg asv_name) altLidar" />

        <!-- robot description -->
        <node name="spawn_bladebug" pkg="gazebo_ros" type="spawn_model"
              args="-file $(find bladebug_description)/urdf/bladebug_rotated.urdf -urdf -x -13.86 -y -19.65 -z 2.2 -model $(arg irr_name)"/>
        <!-- x 76.0691 -y -7.0167 -z 102.5440 -Y 1.5707 -->
        <!-- robot description -->
        <param name="robot_description" 
               textfile="$(find bladebug_description)/urdf/bladebug_rotated.urdf"/>

        <!-- Robot controllers -->
        <include file="$(find bladebug_gazebo)/launch/bladebug_control.launch"/>
        
        <!-- bringup controls -->
        <arg name="config" default="bladebug"/>
        <arg name="joy_mapping" default="xbox"/>
        <param name="use_gui" value="$(arg gui)"/>
        <rosparam command="load" file="$(find bladebug_description)/params/$(arg config).yaml" />
        <rosparam command="load" file="$(find bladebug_description)/params/dynamixel.yaml" />
        <rosparam command="load" file="$(find bladebug_description)/params/$(arg joy_mapping).yaml" />

        <include file="$(find bladebug_bringup)/launch/components/joy_teleop.launch" />

        <node name="Bladebug_Controller" pkg="bladebug_controller" type="bladebug_controller" output="screen" respawn="true" />
    </group>

</launch>
